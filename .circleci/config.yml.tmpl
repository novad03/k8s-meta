# -*- mode: yaml -*-

version: 2
jobs:
{{- range .GoVersions }}
  test-{{.}}:
    working_directory: /go/src/go.universe.tf/metallb
    docker:
      - image: circleci/golang:{{.}}
    steps:
      - checkout
      - run: make ci-prepare
      - run: make ci-build
      - run: make ci-test
      - run: make ci-lint
{{- end }}
{{- range $bin := $.Binary }}
  deploy-{{$bin}}:
    working_directory: /go/src/go.universe.tf/metallb
    docker:
      - image: circleci/golang:1.9
    steps:
      - checkout
      - setup_remote_docker
      - run: docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
      - run: make ci-prepare
      - run: make gen-image-targets TAG=$CIRCLE_BRANCH REGISTRY=metallb
      - run: make -f Makefile.image-targets {{$bin}}
{{- end }}
workflows:
  version: 2
  test-and-deploy:
    jobs:
{{- range .GoVersions }}
      - test-{{.}}:
          filters:
            tags:
              include: /.*/
{{- end }}
{{- range $bin := $.Binary }}
      - deploy-{{$bin}}:
          filters:
            tags:
              include: /.*/
          requires:
            - test-1.8
            - test-1.9
{{- end }}
